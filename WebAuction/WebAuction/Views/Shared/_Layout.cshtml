<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <!--меню-->
    <div style="position:absolute; left:70vw; width:30vw;">
        <span class="greeting">Hello, @User.Identity.Name</span>
        <form asp-action="Logout" asp-controller="Account" style="position:absolute; left:83.5%; ">
            <button class="btn btn-dark" style="margin:5px">Logout</button>
        </form>
    </div>
    
    <div style="position:absolute; left:18vw; top:11vh; width:81vw">
        @RenderBody()
    </div>

    <div class="sidebar-menu">
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Лоты</a></li>
            <li><a asp-controller="Home" asp-action="Bids">Пользователи</a></li>
            <li><a asp-controller="Profile" asp-action="ChangeProfile">Профиль</a></li>
            @if (User.IsInRole("admin"))
            {
                <li><a asp-controller="Home" asp-action="Users">Пользователи</a></li>
            }    
        </ul>
    </div>

    <div style="position:absolute; top:5vh; width:100vw">
        <nav class="navbar navbar-dark bg-warning justify-content-between">
            <form class="form-inline offset-2 col-4">
                <input class="form-control mr-sm-2 col-6" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark" type="submit">Search</button>
            </form>
            <div id="ScoreProfile">
                <h5>@ViewBag.Score $</h5>
            </div>      
        </nav>
    </div>
</body>
</html>
